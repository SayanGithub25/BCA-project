@model IEnumerable<RestraurantADMIN.Models.OrderListModel>
@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_RestaurantADMINLayout.cshtml";
}

<div class="row">
        <div class="col-xl-12 col-md-12">
            <div class="card card-shadow mb-4">
                <div class="card-header border-0">
                    <div class="custom-title-wrap bar-primary">
                        <div class="custom-title" style="text-align:center">Order Table</div>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col" style="width:5%">Sl.No</th>
                                <th scope="col" style="width:20%">Coustomer Name</th>
                                <th scope="col" style="width:20%">Food Item</th>
                                <th scope="col" style="width:5%">Quantity</th>
                                <th scope="col" style="width:5%">Price</th>
                                <th scope="col" style="width:35%">Address & Contact</th>
                                <th scope="col" style="width:15%">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var i=1;
                                foreach (var data in Model)
                                {
                                    <tr>
                                        <th scope="row">@i</th>
                                        <td>@data.FirstName @data.LastName</td>
                                        <td>@data.strFoodItemName</td>
                                        <td>@data.Qty</td>
                                        <td>@data.TotalRate</td>
                                        <td>@data.Company @data.Telephone @data.Email @data.strCountryName 
                                        @data.strStateName @data.Street @data.LandMark @data.Zip</td>
                                        @if(@data.RedyToProcess==1 && @data.OutOfDelivery!=1)
                                        {
                                        <td><button type="button" class="btn btn-primary" onclick="RedyToProcess(@data.StockOutId)">Redy to Process</button></td>
                                        }
                                        else
                                        {
                                        <td><button type="button" class="btn btn-danger" onclick="OutOfDelivery(@data.StockOutId)">Out Of Delivery</button></td>
                                        }
                                        <td><button type="button" class="btn btn-danger" onclick="Cancel(@data.StockOutId)">Cancel</button></td>
                                    </tr>
                                    i = i + 1;
                                }
                            }                          
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/AppScript/Order.js"></script>